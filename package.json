{
  "name": "react-redux-template",
  "version": "1.0.3",
  "description": "React redux starter kit",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "./node_modules/.bin/babel-node server",
    "dist": "cross-env NODE_ENV=production webpack",
    "start:dist": "./node_modules/.bin/babel-node server --production",
    "lint:js": "eslint src --ext .js --ext .jsx",
    "lint:js:fix": "eslint src --ext .js --ext .jsx --fix",
    "lint:css": "./node_modules/stylelint/dist/cli.js src/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "precommit": "npm run lint"
  },
  "author": "Steven Van Eenoo",
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "clean-webpack-plugin": "^0.1.15",
    "compression": "^1.6.2",
    "compression-webpack-plugin": "^0.3.2",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-config-dlw": "^1.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.1",
    "jest": "^18.1.0",
    "lodash-webpack-plugin": "^0.11.0",
    "morgan": "^1.8.1",
    "normalize.css": "^5.0.0",
    "postcss-loader": "^1.3.1",
    "postcss-reporter": "^3.0.0",
    "proxy-middleware": "^0.15.0",
    "react-hot-loader": "3.0.0-beta.6",
    "redux-logger": "^2.8.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.17.0",
    "webpack-merge": "^0.17.0",
    "yargs": "^6.6.0"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.5.4",
    "serve-favicon": "^2.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*-actions.js",
      "src/**/*-reducers.js",
      "src/**/*-selectors.js"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "lodash",
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": [
      "dlw",
      "dlw/rules/react"
    ],
    "rules": {},
    "env": {
      "jest": true
    },
    "globals": {
      "__DEV__": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
